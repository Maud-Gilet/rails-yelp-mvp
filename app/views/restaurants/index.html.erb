<h1>Best restaurants in Paris</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
   <li><%= restaurant.name %> (<%= restaurant.category %>) - <%= restaurant.address %>
    <%= link_to "See details", restaurant_path(restaurant), class: ""%>
   </li>
  <% end %>
</ul>

<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary"%>
