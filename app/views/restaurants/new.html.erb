<h1>Add a new restaurant to the list</h1>
<br>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :phone_number %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>
<br>
<br>
<br>
<%= link_to "Back to main list", restaurants_path, class: "btn"%>
